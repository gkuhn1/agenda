= simple_form_for [:admin, @account] do |f|
  - if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :description
  = f.input :address
  = f.input :phone
  = f.input :phone2
  = f.input :website
  = f.input :plan

  .box-footer
    = f.button :submit, 'Enviar', {class: 'btn btn-success'}
