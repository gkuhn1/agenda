%header.main-header
  %a.logo{:href => root_path}
    = title
  / Header Navbar: style can be found in header.less
  %nav.navbar.navbar-static-top{:role => "navigation"}
    / Sidebar toggle button
    %a.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
      %span.sr-only Alternar menu
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a{href: root_path} Dashboard
        %li
          %a Calendário
        %li
          %a Clientes
        - if current_user.admin?
          %li{class: "#{@admin ? 'open' : ''}"}
            %a{href: admin_homepages_path} Administração
      .navbar-custom-menu
        %ul.nav.navbar-nav
          / Messages: style can be found in dropdown.less
          %li.dropdown.messages-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-envelope-o
              %span.label.label-success 4
            %ul.dropdown-menu
              %li.header You have 4 messages
              %li
                / inner menu: contains the actual data
                %ul.menu
                  %li
                    / start message
                    %a{:href => "#"}
                      .pull-left
                        %img.img-circle{:alt => "User Image", :src => image_path("user2-160x160.jpg")}/
                      %h4
                        Support Team
                        %small
                          %i.fa.fa-clock-o
                          5 mins
                      %p Why not buy a new awesome theme?
                  / end message
              %li.footer
                %a{:href => "#"} See All Messages
          / Notifications: style can be found in dropdown.less
          %li.dropdown.notifications-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-bell-o
              %span.label.label-warning 10
            %ul.dropdown-menu
              %li.header You have 10 notifications
              %li
                / inner menu: contains the actual data
                %ul.menu
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-users.text-aqua
                      5 new members joined today
              %li.footer
                %a{:href => "#"} View all
          / Tasks: style can be found in dropdown.less
          %li.dropdown.tasks-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-flag-o
              %span.label.label-danger 9
            %ul.dropdown-menu
              %li.header You have 9 tasks
              %li
                / inner menu: contains the actual data
                %ul.menu
                  %li
                    / Task item
                    %a{:href => "#"}
                      %h3
                        Design some buttons
                        %small.pull-right 20%
                      .progress.xs
                        .progress-bar.progress-bar-aqua{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 20%"}
                          %span.sr-only 20% Complete
                  / end task item
              %li.footer
                %a{:href => "#"} View all tasks
          / User Account: style can be found in dropdown.less
          %li.dropdown.user.user-menu
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
              %img.user-image{:alt => "User Image", :src => image_path("user2-160x160.jpg")}/
              %span.hidden-xs
                = current_user.name
            %ul.dropdown-menu
              / User image
              %li.user-header
                %img.img-circle{:alt => "User Image", :src => image_path("user2-160x160.jpg")}/
                %p
                  = current_user.name
                  %small
                    Membro desde
                    = current_user.created_at.to_s
                  %small
                    Conta Atual
                    = current_account.name
              / Menu Body
              %li.user-body
                - current_user.accounts do |account|
                  .col-xs-4.text-center
                    %a{:href => "#"} account.name

              / Menu Footer
              %li.user-footer
                .pull-left
                  %a.btn.btn-default.btn-flat{:href => edit_user_registration_path} Minhas informações
                .pull-right
                  %a.btn.btn-default.btn-flat{:href => destroy_user_session_path(:method => :delete)} Sair
